<%- include('partials/header') %>
    <%- include('partials/navbar') %>
<main class="container mt-5 mb-5">
  <h2 class="mb-4">Livros em Destaque</h2>
  <div class="row">
    <% books.forEach(function(book) { %>
      <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
        <div class="card h-100 shadow-sm">
          <img src="<%= book.image %>" class="card-img-top book-cover" alt="Imagem de <%= book.title %>" />
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= book.title %></h5>
            <p class="card-text"><%= book.description %></p>
            <p class="text-muted">Autor: <%= book.author %></p>

            <div class="book-rating mb-2">
              <% for(let i = 1; i <= 5; i++) { %>
                <% if(i <= book.rating) { %>
                  <i class="bi bi-star-fill text-warning"></i>
                <% } else { %>
                  <i class="bi bi-star text-warning"></i>
                <% } %>
              <% } %>
            </div>

            <p class="text-success">R$ <%= book.price.toFixed(2) %></p>

            <div class="mt-auto d-flex justify-content-between align-items-center">
              <a href="/books/<%= book._id %>" class="btn btn-sm btn-outline-primary">Detalhes</a>
              <button type="button" class="btn btn-sm btn-success btn-comprar" data-id="<%= book._id %>">Comprar</button>
            </div>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</main>

<script>
// Função para enviar uma requisição POST para adicionar um produto ao carrinho
    <% if (typeof toastMessage !== 'undefined' && toastMessage) { %>
      window.toastMessage = {
        message: '<%= toastMessage.message %>',
        type: '<%= toastMessage.type %>'
      };
      showToast(window.toastMessage.message, window.toastMessage.type); // Exibe o toast automaticamente
    <% } %>
</script>

<%- include('partials/footer') %>
