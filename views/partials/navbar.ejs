<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm w-100">
    <div class="container">
        <a class="navbar-brand" href="/">
            <img src="/images/logo.png" alt="PampaBooks Logo" class="img-fluid" style="max-height: 60px;" />
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link <%= HomeActive == 'active' ? 'active' : '' %>" aria-current="page" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= ContactActive == 'active' ? 'active' : '' %>" href="/contact">Contato</a>
                </li>
            </ul>

            <!-- Campo de Pesquisa -->
            <form class="d-flex me-3" id="search-form">
                <div class="input-group">
                    <input class="form-control" type="search" id="search-input" placeholder="Pesquisar livros" required aria-label="Pesquisar" />
                    <button class="btn btn-outline-success" id="search" type="submit">Pesquisar</button>
                </div>
            </form>
            <!-- Ícones de Login, Carrinho e Dropdown de Usuário -->
            <div class="d-flex mt-2 mt-lg-0 ms-lg-3">
                <% if (userName) { %>
                <!-- Dropdown com nome do usuário -->
                <div class="dropdown me-2" style="background-color: transparent !important;">
                    <button class="btn btn-secondary dropdown-toggle" style="background-color: transparent !important;" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        Olá, <%= userName %>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="userDropdown">
                        <li><a class="dropdown-item" href="/painel">Painel</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#" id="logoutLink">Sair</a></li>
                    </ul>
                </div>
                <% } else { %>
                <!-- Botão de Login -->
                <a href="/login" class="btn btn-secondary me-2">
                    <i class="bi bi-person"></i>
                </a>
                <% } %>
                <a href="/cart" class="btn btn-primary" style="background-color: transparent !important;">
                    <i class="bi bi-cart"></i> <span class="badge bg-danger"><%= totalItems %></span>
                </a>
            </div>
        </div>
    </div>
</nav>

<!-- Toast Container -->
<div id="toast-container" class="position-fixed top-0 end-0 p-3" style="z-index: 1050;">
    <!-- Toast Template -->
    <div id="toast-template" class="toast align-items-center text-white bg-success border-0 d-none mt-1" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">
                <!-- Toast message will be inserted here -->
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
